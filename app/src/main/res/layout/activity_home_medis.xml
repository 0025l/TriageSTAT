<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".HomeActivityMedis">

    <ImageView
        android:id="@+id/imagehome"
        android:layout_width="0dp"
        android:layout_height="412dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/home" />

    <ImageView
        android:id="@+id/button_lihatData"
        android:layout_width="232dp"
        android:layout_height="52dp"
        android:layout_marginBottom="144dp"
        android:onClick="launchDataKorbanMedis"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:srcCompat="@drawable/button_lihatdatakorban" />

    <TextView
        android:id="@+id/textView_triage"
        android:layout_width="362dp"
        android:layout_height="82dp"
        android:text="Aplikasi Triage dibuat untuk membantu petugas Tim SAR/ relawan dalam membantu korban saat berada di dalam keadaan darurat"
        android:textColor="#FFFFFF"
        app:layout_constraintBottom_toBottomOf="@+id/imagehome"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.686"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/signout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="36dp"
        android:layout_marginEnd="32dp"
        android:onClick="logout"
        android:text="SIGN OUT"
        android:textColor="#FFFFFF"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>